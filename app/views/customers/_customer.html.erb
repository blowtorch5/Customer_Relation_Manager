<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <%= customer.full_name %>
      </p>
      <p>Name: <%= link_to customer.full_name, customer %></p>
      <% if customer.image.present? %>
        <div class="card-image">
          <figure class="image">
            <%= image_tag customer.image %>
          </figure>
        </div>
      <% end %>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        phone: <br><%= customer.phone_number %>
      </p>
      <p class="card-footer-item">
        email address: <br><%= customer.email_address %>
      </p>
      <p class="card-footer-item">
        Notes: <br><%= customer.notes %>
      </p>
    </footer>
  </div>
</div>